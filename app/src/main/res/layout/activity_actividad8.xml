<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Actividad8">

    <TextView
        android:id="@+id/a8_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a8_link_ioc_ccodes"/>

    <EditText
        android:id="@+id/a8_in_ioc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="Código IOC del país"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/a8_submit_ioc_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/lapis_lazuli"
        android:text="Buscar país"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/a8_out_country_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:textColor="@color/lapis_lazuli" />
</LinearLayout>