<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".Actividad5_1_L2">

    <ImageView
        android:src="@drawable/ic_baseline_star_24_yellow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left" />
    <ImageView
        android:src="@drawable/ic_baseline_star_24_orange"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center" />
    <ImageView
        android:src="@drawable/ic_baseline_star_24_red"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#7459ae"
        android:background="#E4CAFF"
        android:text="Weight = 1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#644bab"
        android:background="#B398CE"
        android:text="Weight = 2"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="5dp" />

</LinearLayout>